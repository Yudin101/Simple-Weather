{
  "manifest_version": 3,
  "name": "Simple Weather",
  "version": "1.0.0",
  "description": "Know the Weather!",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/icons/16.png",
      "48": "assets/icons/48.png",
      "128": "assets/icons/128.png"
    }
  },
  "permissions": ["geolocation"]
}
